{{ 'section-weekly-picks.css' | asset_url | stylesheet_tag }}

<div class="weekly-picks">
    <h2 class="weekly-picks__header">Picks of the weeks</h2>
    <div class="weekly-picks__product-ctn">
        {% for product in section.settings.collection.products %}
            <div class="weekly-picks__item">
                <a class="{{ product.url }}">
                    <div>
                        <img src="{{ product.images[0].src | img_url: 'medium' }}" />
                    </div>
                <p>{{ product.title }}</p>
                <div>
                    <span>{{ product.price | money }}</span>
                </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>


{% schema %}
{
    "name": "Weekly Picks",
    "settings": [
        {
            "type"  : "collection",
            "id"    : "collection",
            "label" : "Collection"
        }
    ],
    "presets": [
        {
            "name": "Weekly picks"
        }
    ]
}

{% endschema %}